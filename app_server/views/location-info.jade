include _includes/sharedHTMLfunctions

extends layout

block content
  .row.page-header
    .col-lg-12
      h1= title
  .row
    .col-xs-12.col-md-9
      .row
        .col-xs-12.col-sm-6
          p.rating
            +outputRating(rating)
          p= location.address
          .panel.panel-primary
            .panel-heading
              h2.panel-title Opening hours
            .panel-body
              each time in location.openingTimes
                p #{time.days} : 
                  if !time.closed
                    &nbsp;#{time.opening} - #{time.closing}
                  else
                    &nbsp;Closed
          .panel.panel-primary
            .panel-heading
              h2.panel-title Facilities
            .panel-body
              each facility in location.facilities 
                span.label.label-warning
                  span.glyphicon.glyphicon-ok
                  | &nbsp;#{facility}
        .col-xs-12.col-sm-6.location-map
          .panel.panel-primary
            .panel-heading
              h2.panel-title Location map
            .panel-body
              img.img-responsive.img-rounded(src='https://maps.googleapis.com/maps/api/staticmap?center=#{location.coords.lat},#{location.coords.lng}&zoom]17&size=400x350&sensor=false&markers=#{location.coords.lat},#{location.coords.lng}&scale=2')
      .row
        .col-xs-12
          .panel.panel-primary.review-panel
            .panel-heading
              a.btn.btn-default.pull-right(href='/location/#{location._id}/review/new') Add review
              h2.panel-title Customer reviews
              .clearfix
            .panel-body.review-container
              .row
                if location.reviews.length > 0
                  each review in location.reviews
                    .review
                      .well.well-sm.review-header
                        span.rating
                          +outputRating(review.rating)
                        span.reviewAuthor #{review.author} 
                        small.reviewTimestamp
                          +formatDate(review.createdOn)
                      .col-xs-12
                        p !{(review.reviewText).replace(/\n/g, '<br/>')}
                else
                  .review
                    .well.well-sm.review-header No reviews yet.
    .col-xs-12.col-md-3
      p.lead #{title} #{sidebar.context}
      p= sidebar.callToAction